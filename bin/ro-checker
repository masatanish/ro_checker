#!/usr/bin/env ruby

require 'trollop'
require 'ro_checker'

opts = Trollop::options do
  opt :file, 'target cfb file path (must)', :type => :io, :required => true
  opt :verbose, 'verbose mode'
end

results = RoChecker.check_from_path(opts[:file])
total_result = results.values.any?{|v| v == true}
value = (results.values.any?{|v| v == false } ? 'suspicious' : 'not suspicious')
puts "ro-checker: " + value
if opts[:verbose]
  max_key_len = results.keys.max_by{|k| k.length }.length
  results.each do |key, val|
    k = key.to_s.gsub(/_/,' ') + ":"
    v = val ? 'yes' : 'no'
    puts "  #{k.ljust(max_key_len+2)} #{v}"
  end
end
